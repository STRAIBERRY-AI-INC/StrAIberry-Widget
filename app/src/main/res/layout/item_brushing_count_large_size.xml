<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70dp"
    android:layout_height="101dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewDayName"
        style="@style/TextViewPrimary18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_day_of_brushing"
        android:textAlignment="center" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progress_in_brushing"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:indeterminateTint="@color/black"
            android:max="5"
            android:progress="4"
            android:progressDrawable="@drawable/circular_progress_bar" />

        <TextView
            android:id="@+id/textViewBrushingCount"
            style="@style/TextViewPrimary27sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>